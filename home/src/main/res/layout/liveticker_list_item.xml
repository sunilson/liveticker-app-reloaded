<?xml version="1.0" encoding="utf-8"?>

<layout>

    <data>

        <variable
                name="obj"
                type="at.sunilson.liveticker.core.models.LiveTicker"/>
    </data>

    <com.google.android.material.card.MaterialCardView
            xmlns:app="http://schemas.android.com/apk/res-auto"
            xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:tools="http://schemas.android.com/tools"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            app:cardCornerRadius="10dp"
            app:cardElevation="3dp"
            android:layout_marginLeft="@dimen/liveticker_card_margin_leftright"
            android:layout_marginRight="@dimen/liveticker_card_margin_leftright"
            android:layout_marginTop="@dimen/liveticker_margin_side_topbottom"
            android:layout_marginBottom="@dimen/liveticker_margin_side_topbottom"
            >

        <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

            <TextView
                    android:id="@+id/liveticker_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Liveticker Name"
                    android:layout_marginLeft="@dimen/card_padding"
                    style="@style/BaseText.SmallHeader"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toTopOf="@id/liveticker_date"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintVertical_chainStyle="packed"
                    />

            <TextView
                    android:id="@+id/liveticker_date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    style="@style/BaseText.SubHeader"
                    android:text="Erstellt am 20.12.2019"
                    app:layout_constraintLeft_toLeftOf="@id/liveticker_name"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/liveticker_name"
                    />

            <at.sunilson.liveticker.presentation.views.DiagonalCutView
                    android:id="@+id/diagonal_cut"
                    android:layout_width="150dp"
                    android:layout_height="match_parent"
                    android:background="@color/colorPrimary"
                    app:layout_constraintRight_toRightOf="parent"
                    app:direction="left"
                    />

            <ImageView
                    android:id="@+id/liveticker_list_item_share"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:padding="23dp"
                    android:src="@drawable/ic_share_black_24dp"
                    android:tint="@android:color/white"
                    android:background="@null"
                    android:layout_marginLeft="25dp"
                    app:layout_constraintLeft_toLeftOf="@id/diagonal_cut"
                    app:layout_constraintRight_toLeftOf="@id/liveticker_list_item_delete"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    />

            <ImageView
                    android:id="@+id/liveticker_list_item_delete"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:padding="23dp"
                    android:src="@drawable/ic_delete_black_24dp"
                    android:tint="@android:color/white"
                    android:background="@null"
                    app:layout_constraintLeft_toRightOf="@id/liveticker_list_item_share"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </com.google.android.material.card.MaterialCardView>
</layout>

