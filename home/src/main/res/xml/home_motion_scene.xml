<?xml version="1.0" encoding="utf-8"?>
<MotionScene xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto">
    <Transition
            app:constraintSetEnd="@id/end"
            app:constraintSetStart="@id/start"
            app:duration="200"
            app:motionInterpolator="easeInOut"></Transition>
    <ConstraintSet android:id="@+id/start">
        <Constraint android:id="@+id/home_search_bar" />
        <Constraint android:id="@+id/home_main_content" />
    </ConstraintSet>
    <ConstraintSet android:id="@+id/end">
        <Constraint android:id="@+id/home_search_bar">
            <Transform android:translationY="0dp" />
        </Constraint>
        <Constraint android:id="@+id/home_main_content">
            <Layout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="@dimen/search_bar_height" />
        </Constraint>
    </ConstraintSet>
</MotionScene>