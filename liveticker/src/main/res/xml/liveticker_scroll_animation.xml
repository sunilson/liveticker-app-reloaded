<?xml version="1.0" encoding="utf-8"?>
<MotionScene
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        >

    <Transition
            app:constraintSetStart="@id/start"
            app:constraintSetEnd="@id/end"
            app:duration="100"
            app:motionInterpolator="easeInOut"
            >

        <OnSwipe
                app:dragDirection="dragUp"
                app:onTouchUp="autoComplete"
                app:touchAnchorId="@id/liveticker_list"
                app:touchAnchorSide="top"
                app:moveWhenScrollAtTop="true"
                />

        <KeyFrameSet>
            <KeyAttribute
                    app:motionTarget="@id/liveticker_short_description"
                    app:framePosition="30"
                    android:alpha="0"
                    />
        </KeyFrameSet>

    </Transition>

    <ConstraintSet android:id="@+id/start">
        <Constraint
                android:id="@+id/liveticker_header_container"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                app:layout_constraintTop_toTopOf="parent"
                >
            <CustomAttribute
                    app:attributeName="offset"
                    app:customFloatValue="100"
                    />
        </Constraint>

        <Constraint
                android:id="@+id/liveticker_profile_image"
                android:layout_width="75dp"
                android:layout_height="75dp"
                app:layout_constraintTop_toBottomOf="@id/liveticker_header_container"
                app:layout_constraintBottom_toBottomOf="@id/liveticker_header_container"
                app:layout_constraintLeft_toLeftOf="parent"
                android:layout_marginLeft="@dimen/container_padding"
                />

        <Constraint
                android:id="@+id/liveticker_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintVertical_chainStyle="packed"
                app:layout_constraintLeft_toLeftOf="@id/liveticker_header_container"
                app:layout_constraintRight_toRightOf="@id/liveticker_header_container"
                app:layout_constraintTop_toTopOf="@+id/liveticker_header_container"
                app:layout_constraintBottom_toTopOf="@+id/liveticker_short_description"
                />
        <Constraint
                android:id="@+id/liveticker_short_description"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:alpha="1"
                app:layout_constraintTop_toBottomOf="@+id/liveticker_title"
                app:layout_constraintLeft_toLeftOf="@id/liveticker_title"
                app:layout_constraintRight_toRightOf="@id/liveticker_title"
                app:layout_constraintBottom_toBottomOf="@id/liveticker_header_container"
                />

        <Constraint
                android:id="@+id/liveticker_info_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="@dimen/medium_margin"
                app:layout_constraintTop_toTopOf="@id/liveticker_header_container"
                app:layout_constraintRight_toRightOf="@id/liveticker_header_container"
                />

        <Constraint
                android:id="@+id/liveticker_info_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:alpha="1"
                android:padding="@dimen/medium_margin"
                app:layout_constraintTop_toTopOf="@id/liveticker_header_container"
                app:layout_constraintRight_toRightOf="@id/liveticker_header_container"
                />

    </ConstraintSet>

    <ConstraintSet android:id="@+id/end">
        <Constraint
                android:id="@+id/liveticker_header_container"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                app:layout_constraintTop_toTopOf="parent"
                >
            <CustomAttribute
                    app:attributeName="offset"
                    app:customFloatValue="0"
                    />
        </Constraint>

        <Constraint
                android:id="@+id/liveticker_profile_image"
                android:layout_width="35dp"
                android:layout_height="35dp"
                app:layout_constraintTop_toTopOf="@id/liveticker_header_container"
                app:layout_constraintBottom_toBottomOf="@id/liveticker_header_container"
                app:layout_constraintLeft_toLeftOf="@id/liveticker_header_container"
                app:layout_constraintRight_toLeftOf="@id/liveticker_title"
                app:layout_constraintHorizontal_chainStyle="packed"
                android:layout_marginLeft="@dimen/container_padding"
                />

        <Constraint
                android:id="@+id/liveticker_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/medium_margin"
                app:layout_constraintVertical_chainStyle="packed"
                app:layout_constraintLeft_toRightOf="@id/liveticker_profile_image"
                app:layout_constraintRight_toRightOf="@id/liveticker_header_container"
                app:layout_constraintTop_toTopOf="@id/liveticker_header_container"
                app:layout_constraintBottom_toBottomOf="@id/liveticker_header_container"
                />

        <Constraint
                android:id="@+id/liveticker_short_description"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:alpha="0"
                app:layout_constraintTop_toBottomOf="@+id/liveticker_title"
                app:layout_constraintLeft_toLeftOf="@id/liveticker_title"
                app:layout_constraintRight_toRightOf="@id/liveticker_title"
                />

        <Constraint
                android:id="@+id/liveticker_info_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="@id/liveticker_header_container"
                app:layout_constraintBottom_toBottomOf="@id/liveticker_header_container"
                app:layout_constraintRight_toRightOf="@id/liveticker_header_container"
                />

        <Constraint
                android:id="@+id/liveticker_info_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:alpha="0"
                android:scaleX="0.5"
                android:scaleY="0.5"
                android:padding="@dimen/medium_margin"
                app:layout_constraintTop_toTopOf="@id/liveticker_header_container"
                app:layout_constraintRight_toRightOf="@id/liveticker_header_container"
                />

    </ConstraintSet>
</MotionScene>