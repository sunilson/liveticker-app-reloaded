<?xml version="1.0" encoding="utf-8"?>
<MotionScene xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:motion="http://schemas.android.com/apk/res-auto">


    <Transition
            app:constraintSetEnd="@id/end"
            app:constraintSetStart="@id/start"
            app:duration="300"
            app:motionInterpolator="easeInOut">

        <OnSwipe
                app:dragDirection="dragUp"
                app:maxAcceleration="10"
                app:moveWhenScrollAtTop="true"
                app:touchAnchorId="@id/liveticker_list"
                app:touchAnchorSide="top" />

        <KeyFrameSet>
            <KeyAttribute
                    android:alpha="0"
                    app:framePosition="30"
                    app:motionTarget="@id/liveticker_author" />

            <KeyAttribute
                    android:alpha="1"
                    app:framePosition="40"
                    app:motionTarget="@id/liveticker_preview_container" />

            <KeyAttribute
                    android:alpha="0"
                    app:framePosition="75"
                    app:motionTarget="@id/liveticker_preview_container" />

        </KeyFrameSet>

    </Transition>

    <ConstraintSet android:id="@+id/start">
        <Constraint android:id="@+id/liveticker_header_container">
            <CustomAttribute
                    app:attributeName="offsetDimension"
                    app:customIntegerValue="35" />
        </Constraint>

        <Constraint
                android:id="@+id/liveticker_profile_image"
                android:layout_width="75dp"
                android:layout_height="75dp"
                android:layout_marginLeft="20dp"
                android:padding="2dp"
                app:layout_constraintBottom_toBottomOf="@id/liveticker_header_container"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toBottomOf="@id/liveticker_header_container"
                motion:pathMotionArc="startVertical" />
        <Constraint android:id="@+id/liveticker_title" />
        <Constraint android:id="@+id/liveticker_author" />
        <Constraint android:id="@+id/liveticker_preview_container" />
        <Constraint android:id="@+id/liveticker_preview_controls" />
        <Constraint android:id="@+id/liveticker_list" />
        <Constraint android:id="@+id/liveticker_status" />

    </ConstraintSet>

    <ConstraintSet android:id="@+id/end">
        <Constraint android:id="@+id/liveticker_header_container">
            <Layout
                    android:layout_width="match_parent"
                    android:layout_height="?attr/actionBarSize" />
            <CustomAttribute
                    app:attributeName="offsetDimension"
                    app:customIntegerValue="0" />
        </Constraint>

        <Constraint
                android:id="@+id/liveticker_profile_image"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_marginLeft="@dimen/container_padding"
                app:layout_constraintBottom_toBottomOf="@id/liveticker_header_container"
                app:layout_constraintHorizontal_chainStyle="packed"
                app:layout_constraintLeft_toLeftOf="@id/liveticker_header_container"
                app:layout_constraintRight_toLeftOf="@id/liveticker_title"
                app:layout_constraintTop_toTopOf="@id/liveticker_header_container" />

        <Constraint
                android:id="@+id/liveticker_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/medium_margin"
                app:layout_constraintBottom_toBottomOf="@id/liveticker_header_container"
                app:layout_constraintLeft_toRightOf="@id/liveticker_profile_image"
                app:layout_constraintRight_toRightOf="@id/liveticker_header_container"
                app:layout_constraintTop_toTopOf="@id/liveticker_header_container"
                app:layout_constraintVertical_chainStyle="packed" />

        <Constraint
                android:id="@+id/liveticker_author"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:alpha="0"
                app:layout_constraintLeft_toLeftOf="@id/liveticker_title"
                app:layout_constraintRight_toRightOf="@id/liveticker_title"
                app:layout_constraintTop_toBottomOf="@+id/liveticker_title" />


        <Constraint
                android:id="@+id/liveticker_preview_container"
                android:layout_width="match_parent"
                android:layout_height="@dimen/map_height"
                android:alpha="0"
                android:background="@color/subHeaderTextColor"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="@id/map_spacer" />

        <Constraint
                android:id="@+id/liveticker_list"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:paddingBottom="@dimen/bottom_sheet_peek_height_with_padding"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintTop_toBottomOf="@id/liveticker_header_container" />


    </ConstraintSet>
</MotionScene>