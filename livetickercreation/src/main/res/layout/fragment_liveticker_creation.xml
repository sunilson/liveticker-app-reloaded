<?xml version="1.0" encoding="utf-8"?>
<layout
        xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
                name="viewModel"
                type="at.sunilson.liveticker.livetickercreation.presentation.livetickerCreation.LivetickerCreationViewModel" />
    </data>


    <androidx.coordinatorlayout.widget.CoordinatorLayout
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:id="@+id/fragment_liveticker_creation_content"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/defaultBackgroundColor"
            android:fitsSystemWindows="true"
            android:orientation="vertical">


        <com.google.android.material.appbar.AppBarLayout
                android:id="@+id/toolbar_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:liftOnScroll="true">

            <com.google.android.material.appbar.MaterialToolbar
                    android:id="@+id/toolbar"
                    android:layout_width="match_parent"
                    android:layout_height="?attr/actionBarSize"
                    app:navigationIcon="@drawable/ic_arrow_back_white_24dp"
                    app:title="Neuer Liveticker"
                    app:titleTextColor="@color/baseTextColorInverted" />

        </com.google.android.material.appbar.AppBarLayout>

        <androidx.core.widget.NestedScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/defaultBackgroundColor"
                app:layout_behavior="@string/appbar_scrolling_view_behavior">

            <LinearLayout
                    android:id="@+id/fragment_liveticker_creation_inputs"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:clipToPadding="false"
                    android:orientation="vertical"
                    android:padding="@dimen/container_padding">

                <at.sunilson.liveticker.presentation.views.CustomFontTextInputLayout
                        style="@style/BaseTextInputLayout"
                        android:hint="@string/enter_title"
                        app:counterEnabled="true"
                        app:counterMaxLength="120"
                        app:startIconDrawable="@drawable/ic_title_black_24dp"
                        app:startIconTint="@color/baseTextColor">

                    <com.google.android.material.textfield.TextInputEditText
                            style="@style/BaseEditText"
                            android:text="@={viewModel.title}" />
                </at.sunilson.liveticker.presentation.views.CustomFontTextInputLayout>

                <at.sunilson.liveticker.presentation.views.CustomFontTextInputLayout
                        style="@style/BaseTextInputLayout"
                        android:hint="@string/enter_short_description"
                        app:counterEnabled="true"
                        app:counterMaxLength="120"
                        app:startIconDrawable="@drawable/ic_text_fields_black_24dp"
                        app:startIconTint="@color/baseTextColor">

                    <com.google.android.material.textfield.TextInputEditText
                            style="@style/BaseEditText"
                            android:text="@={viewModel.shortDescription}" />
                </at.sunilson.liveticker.presentation.views.CustomFontTextInputLayout>

                <at.sunilson.liveticker.presentation.views.CustomFontTextInputLayout
                        style="@style/BaseTextInputLayout"
                        android:hint="@string/enter_description"
                        app:startIconDrawable="@drawable/ic_description_black_24dp"
                        app:startIconTint="@color/baseTextColor">

                    <com.google.android.material.textfield.TextInputEditText
                            style="@style/BaseEditText"
                            android:inputType="textMultiLine"
                            android:minLines="3"
                            android:text="@={viewModel.description}" />
                </at.sunilson.liveticker.presentation.views.CustomFontTextInputLayout>

                <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                    <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentStart="true"
                            android:layout_centerVertical="true"
                            android:layout_marginBottom="@dimen/smallest_margin"
                            android:text="@string/choose_location" />

                    <com.google.android.material.switchmaterial.SwitchMaterial
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentEnd="true"
                            android:layout_centerVertical="true"
                            android:checked="@={viewModel.usePosition}" />

                </RelativeLayout>

                <androidx.constraintlayout.widget.ConstraintLayout
                        android:id="@+id/fragment_liveticker_creation_map_container"
                        android:layout_width="match_parent"
                        android:layout_height="200dp"
                        android:layout_marginBottom="@dimen/big_margin"
                        android:animateLayoutChanges="true"
                        app:showIf="@{viewModel.usePosition}">

                    <FrameLayout
                            android:id="@+id/fragment_liveticker_creation_map"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@color/disabledBackgroundColor" />

                    <View
                            android:id="@+id/fragment_liveticker_creation_map_text_container"
                            android:layout_width="match_parent"
                            android:layout_height="50dp"
                            android:background="#80000000"
                            app:hideIf="@{viewModel.location == null}"
                            app:layout_constraintBottom_toBottomOf="parent" />

                    <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:padding="@dimen/small_margin"
                            android:text="@{viewModel.location.name}"
                            android:textColor="@color/baseTextColorInverted"
                            app:layout_constraintBottom_toBottomOf="@id/fragment_liveticker_creation_map_text_container"
                            app:layout_constraintLeft_toLeftOf="parent"
                            app:layout_constraintTop_toTopOf="@id/fragment_liveticker_creation_map_text_container" />

                </androidx.constraintlayout.widget.ConstraintLayout>
            </LinearLayout>
        </androidx.core.widget.NestedScrollView>

        <com.google.android.material.floatingactionbutton.ExtendedFloatingActionButton
                android:id="@+id/fragment_register_register"
                style="@style/BaseExtendedFabStyle"
                android:layout_gravity="bottom|center_horizontal"
                android:onClick="@{viewModel::createLiveTicker}"
                android:text="@string/create"
                app:icon="@drawable/ic_check_black_24dp" />

    </androidx.coordinatorlayout.widget.CoordinatorLayout>
</layout>
