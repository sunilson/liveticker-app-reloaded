<?xml version="1.0" encoding="utf-8"?>

<layout>

    <data>

        <variable
                name="viewModel"
                type="at.sunilson.liveticker.presentation.dialogs.inputDialog.InputDialogViewModel"/>
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
            xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        <com.google.android.material.card.MaterialCardView
                android:id="@+id/main_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_margin="@dimen/medium_margin">

            <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingBottom="@dimen/big_margin"
                    >

                <at.sunilson.liveticker.presentation.views.ArcView
                        android:id="@+id/top_container"
                        android:layout_width="match_parent"
                        android:layout_height="100dp"
                        app:layout_constraintTop_toTopOf="parent"
                        android:background="@color/colorPrimary"
                        app:arcHeight="20dp"
                        />

                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:layout_constraintTop_toTopOf="@id/top_container"
                        app:layout_constraintBottom_toBottomOf="@id/top_container"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintRight_toRightOf="parent"
                        android:text="@{viewModel.title}"
                        style="@style/BaseText.SmallHeader"
                        android:textColor="@color/baseTextColorInverted"
                        />

                <at.sunilson.liveticker.presentation.views.CustomFontTextInputLayout
                        style="@style/BaseTextInputLayout"
                        android:hint="@{viewModel.hint}"
                        app:counterEnabled="true"
                        app:counterMaxLength="120"
                        app:layout_constraintTop_toBottomOf="@id/top_container"
                        app:layout_constraintBottom_toBottomOf="parent"
                        android:layout_marginLeft="@dimen/big_margin"
                        android:layout_marginRight="@dimen/big_margin"
                        android:layout_marginTop="@dimen/biggest_margin"
                        android:layout_marginBottom="@dimen/biggest_margin"
                        >

                    <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/input"
                            style="@style/BaseEditText"
                            android:text="@={viewModel.inputText}"
                            />
                </at.sunilson.liveticker.presentation.views.CustomFontTextInputLayout>
            </androidx.constraintlayout.widget.ConstraintLayout>
        </com.google.android.material.card.MaterialCardView>

        <com.google.android.material.floatingactionbutton.ExtendedFloatingActionButton
                android:id="@+id/input_confirm"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@{viewModel.confirm}"
                android:onClick="@{viewModel::confirmClicked}"
                app:icon="@drawable/ic_check_black_24dp"
                app:iconTint="@color/baseTextColorInverted"
                app:iconGravity="textStart"
                app:backgroundTint="@color/colorAccent"
                android:textColor="@color/baseTextColorInverted"
                app:layout_constraintBottom_toBottomOf="@id/main_container"
                app:layout_constraintTop_toBottomOf="@id/main_container"
                app:layout_constraintRight_toRightOf="@id/main_container"
                app:layout_constraintLeft_toLeftOf="@id/main_container"
                />
    </androidx.constraintlayout.widget.ConstraintLayout>


</layout>
